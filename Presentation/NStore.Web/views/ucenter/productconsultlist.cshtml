@model NStore.Web.Models.UserProductConsultListModel
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
@section header{
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>购买咨询-@{@WorkContext.MallConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.MallConfig.SEOKeyword)
    @Html.Raw(WorkContext.MallConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/ucenter.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/utils.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/ucenter.user.js" type="text/javascript"></script>
    <script type="text/javascript">
        uid = @WorkContext.Uid;
        isGuestSC = @WorkContext.MallConfig.IsGuestSC;
        scSubmitType = @WorkContext.MallConfig.SCSubmitType;
    </script>
}

@section body{
<div class="bigBox" id="member">
<div class="box">
<div id="memberL">
<h2>个人中心</h2>
<ul id="memberNav">
    <li><a href="@Url.Action("userinfo")"><s>&gt;</s>账户信息</a></li>
    <li><a href="@Url.Action("safeinfo")"><s>&gt;</s>账户安全</a></li>
    <li><a href="@Url.Action("orderlist")"><s>&gt;</s>我的订单</a></li>
    <li><a href="@Url.Action("shipaddresslist")"><s>&gt;</s>收货地址</a></li>
    <li><a href="@Url.Action("favoriteproductlist")"><s>&gt;</s>收藏商品</a></li>
    <li><a href="@Url.Action("favoritestorelist")"><s>&gt;</s>收藏店铺</a></li>
    <li><a href="@Url.Action("paycreditloglist")"><s>&gt;</s>我的@{@WorkContext.PayCreditName}</a></li>
    <li><a href="@Url.Action("couponlist")"><s>&gt;</s>优惠劵</a></li>
    <li><a href="@Url.Action("productconsultlist")" class="hot"><s>&gt;</s>购买咨询</a></li>
    <li><a href="@Url.Action("productreviewlist")"><s>&gt;</s>商品评价</a></li>
</ul>

</div>
<div id="memberR">
    <h2 id="memberRT">购买咨询</h2>
    <div class="favT">
        <div class="favTpage">
            共有 <b>@Model.PageModel.TotalCount</b> 条记录<i>
            <font color="#ff6600">@Model.PageModel.PageNumber</font>/@Model.PageModel.TotalPages </i> &nbsp; 
            @if (Model.PageModel.HasPrePage)
            { 
                <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.PrePageNumber } })" class="whiteBT">上一页</a>@:&nbsp; 
            }
            else
            {
                <a href="javascript:;" class="whiteBT">上一页</a>@:&nbsp; 
            }
            @if (Model.PageModel.HasNextPage)
            {
                <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.NextPageNumber } })" class="whiteBT">下一页</a>
            }
            else
            {
                <a href="javascript:;" class="whiteBT">下一页</a>
            } 
        </div>
    </div>
    <table width="100%" border="0" cellspacing="0" class="dingdan">
         <thead>
          <tr>
            <th valign="bottom">咨询商品</th>
            <th>咨询/回复</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductConsultInfo info in Model.ProductConsultList)
            {
           <tr>
                <td>
                    <a href="@Url.Action("product", "catalog", new RouteValueDictionary { { "pid", info.Pid } })"><img src="@{@WorkContext.ImageCDN}/upload/store/@info.StoreId/product/show/thumb60_60/@info.PShowImg" width="50" height="50" /></a>
                </td>
                <td>
                    <div>我的咨询: @info.ConsultMessage   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @info.ConsultTime</div>
                    <div>商城回复：@info.ReplyMessage    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @info.ReplyTime</div>
                </td>
            </tr>
            }
        </tbody>
    </table>

<div class="favT">
    <div class="favTpage">
        共有 <b>@Model.PageModel.TotalCount</b> 条记录<i>
        <font color="#ff6600">@Model.PageModel.PageNumber</font>/@Model.PageModel.TotalPages </i> &nbsp; 
        @if (Model.PageModel.HasPrePage)
        { 
            <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.PrePageNumber } })" class="whiteBT">上一页</a>@:&nbsp; 
        }
        else
        {
            <a href="javascript:;" class="whiteBT">上一页</a>@:&nbsp; 
        }
        @if (Model.PageModel.HasNextPage)
        {
            <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "page", Model.PageModel.NextPageNumber } })" class="whiteBT">下一页</a>
        }
        else
        {
            <a href="javascript:;" class="whiteBT">下一页</a>
        } 
    </div>
</div>

</div>

<div class="clear"></div>
</div>
<div class="clear"></div>
</div>
}