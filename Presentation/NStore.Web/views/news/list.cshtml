@model NStore.Web.Models.NewsListModel
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
@section header{
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>新闻列表-@{@WorkContext.MallConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.MallConfig.SEOKeyword)
    @Html.Raw(WorkContext.MallConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/help.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/utils.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script type="text/javascript">
        uid = @WorkContext.Uid;
        isGuestSC = @WorkContext.MallConfig.IsGuestSC;
        scSubmitType = @WorkContext.MallConfig.SCSubmitType;
    </script>
}

@section body{
<div class="box">
<div id="news" class="box">
<h1 class="newsListT">新闻中心</h1>
<ul class="newsList">
@{
    foreach(DataRow row in Model.NewsList.Rows)
    {
        <li><a href="@Url.Action("details", new RouteValueDictionary { { "newsId", row["newsid"] } })">@row["title"]</a><span>@row["addtime"]</span></li>
    }
    }
</ul>
@Html.WebPager(Model.PageModel)
</div>
</div>
}
